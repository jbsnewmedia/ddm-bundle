{% extends '@Vis/tool/base.html.twig' %}

{% block javascripts %}
    {{ include('@DDM/datatable/header.html.twig', {
    asset: [
        'avalynx/avalynx-datatable/dist/js/avalynx-datatable.js',
        'avalynx/avalynx-modal/dist/js/avalynx-modal.js',
        'avalynx/avalynx-alert/dist/js/avalynx-alert.js'
    ]}) }}

    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ include('@DDM/datatable/header.html.twig', {
    asset: [
        'avalynx/avalynx-datatable/dist/css/avalynx-datatable.css',
        'avalynx/avalynx-modal/dist/css/avalynx-modal.css',
        'avalynx/avalynx-alert/dist/css/avalynx-alert.css'
    ]}) }}

    {{ parent() }}
{% endblock %}

{% block vis_container %}
    {{ parent() }}

    {{ include('@DDM/datatable/default.html.twig', {
        ddm: ddm,
        options: ddm_options|default({
            add_url: ddm.route('add') ? path(ddm.route('add')) : '#',
            title: ddm.title|default('ddm.title'|vistrans([], 'datatable')),
            datatable_options: {
                apiUrl: ddm.route('api') ? path(ddm.route('api')) : '#',
                sorting: {
                    nachname: 'asc'
                }
            },
            datatable_language: {
                searchLabel: 'ddm.searchLabel'|vistrans([], 'datatable')
            }
        })
    }) }}
{% endblock %}
