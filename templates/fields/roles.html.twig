<div class="form-group mb-3">
    <label class="form-label">{{ field.name|vistrans([], options.translation_domain|default('datatable')) }}:</label>
    <div class="d-flex flex-column gap-1">
        {% set selected = field.value is iterable ? field.value : [] %}
        {% for key, label in field.availableRoles %}
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="{{ field.identifier }}_{{ loop.index }}" name="{{ field.identifier }}[]" value="{{ key }}" {% if key in selected %}checked{% endif %}>
                <label class="form-check-label" for="{{ field.identifier }}_{{ loop.index }}">{{ label }}</label>
            </div>
        {% endfor %}
    </div>
    <span class="invalid-feedback"></span>
</div>
