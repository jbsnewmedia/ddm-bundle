{% set field_id = options.override_id|default(field.getIdentifier()) %}
{% set field_name = options.override_identifier|default(field.getIdentifier()) %}
{% set is_search = options.is_search|default(false) %}
{% set is_required = (not is_search) and field.isRequired() and (required is not defined or required) %}
<div class="form-group mb-3">
    <label class="form-label" for="{{ field_id }}">{{ field.getName()|vistrans([], options.translation_domain|default('datatable')) }}{% if is_required %}{{ field.getRequiredMarker() }}{% endif %}{{ field.getSeparator() }}</label>
    <select name="{{ field_name }}" id="{{ field_id }}" class="form-select" {% if is_required %}required{% endif %}>
        {% for value, label in field.getAvailableChoices() %}
            <option value="{{ value }}" {% if field.getValueForm() == value %}selected{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>
    <span class="invalid-feedback"></span>
</div>
